<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--#region Colors-->
    <Color x:Key="WhiteColor">#EAEAEA</Color>
    <Color x:Key="DarkerWhiteColor">#C1C1C1</Color>

    <Color x:Key="BlackColor">#0F0F0F</Color>
    <Color x:Key="GreyColor">#525252</Color>
    <Color x:Key="GreyDarkerColor">#2d2d2d</Color>

    <Color x:Key="CyanColor">#96D0D2</Color>
    <Color x:Key="CyanLightColor">#BCD8DA</Color>

    <!--#endregion-->

    <!--#region Brushes-->
    <SolidColorBrush x:Key="White"
                     Color="{StaticResource WhiteColor}" />
    <SolidColorBrush x:Key="DarkerWhite"
                     Color="{StaticResource DarkerWhiteColor}" />

    <SolidColorBrush x:Key="Black"
                     Color="{StaticResource BlackColor}" />
    <SolidColorBrush x:Key="Grey"
                     Color="{StaticResource GreyColor}" />
    <SolidColorBrush x:Key="GreyDarker"
                     Color="{StaticResource GreyDarkerColor}" />

    <SolidColorBrush x:Key="Cyan"
                     Color="{StaticResource CyanColor}" />
    <SolidColorBrush x:Key="CyanLight"
                     Color="{StaticResource CyanLightColor}" />
    <!--#endregion-->

</ResourceDictionary>