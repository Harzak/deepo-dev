<UserControl
    x:Class="Deepo.Fetcher.Viewer.Views.AppOverviewView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Deepo.Fetcher.Viewer.Views" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" xmlns:viewmodels="clr-namespace:Deepo.Fetcher.Viewer.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:AppOverviewViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ui:CardExpander
            Grid.Column="0" Margin="20,0,20,0" HorizontalContentAlignment="Center"
            Background="{StaticResource Cyan}"
            Foreground="{StaticResource Black}"
            Icon="CloudArrowDown20" IsEnabled="True" IsExpanded="False">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0" VerticalAlignment="Center" FontSize="14"
                        FontWeight="Medium"
                        Foreground="{StaticResource Black}"
                        Text="Fetcher" />

                    <StackPanel
                        Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,25,0" FontSize="13"
                            Foreground="{StaticResource Black}"
                            Text="{Binding ActiveFetcherCount, StringFormat={}{0} On}" />
                        <TextBlock
                            Margin="25,0,0,0" FontSize="13"
                            Foreground="{StaticResource Black}"
                            Text="{Binding InactiveFetcherCount, StringFormat={}{0} Off}" />

                    </StackPanel>

                </Grid>
            </ui:CardExpander.Header>
        </ui:CardExpander>

        <ui:CardExpander
            Grid.Column="1" Margin="20,0,20,0" HorizontalContentAlignment="Center"
            Background="{StaticResource Cyan}"
            Foreground="{StaticResource Black}"
            Icon="Chat48" IsEnabled="True" IsExpanded="False">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0" VerticalAlignment="Center" FontSize="14"
                        FontWeight="Medium"
                        Foreground="{StaticResource Black}"
                        Text="Notification" />

                    <TextBlock
                        Grid.Column="1" Margin="5,0,20,0" HorizontalAlignment="Right"
                        VerticalAlignment="Center" FontSize="13"
                        Foreground="{StaticResource Black}"
                        Text="Connected" />

                </Grid>
            </ui:CardExpander.Header>
            <StackPanel Orientation="Horizontal">
                <ui:TextBox
                    Margin="5,0,5,0" HorizontalAlignment="Right" ui:ClearButtonEnabled="False"
                    AllowDrop="False"
                    Foreground="{StaticResource Black}"
                    IsReadOnly="True" Text="228.224.154.241" />
            </StackPanel>
        </ui:CardExpander>

        <ui:CardExpander
            Grid.Column="2" Margin="20,0,20,0" HorizontalContentAlignment="Center"
            Background="{StaticResource Cyan}"
            Foreground="{StaticResource Black}"
            Icon="DatabasePlugConnected20" IsEnabled="True" IsExpanded="False">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0" VerticalAlignment="Center" FontSize="14"
                        FontWeight="Medium"
                        Foreground="{StaticResource Black}"
                        Text="Database" />

                    <TextBlock
                        Grid.Column="1" Margin="5,0,20,0" HorizontalAlignment="Right"
                        VerticalAlignment="Center" FontSize="13"
                        Foreground="{StaticResource Black}"
                        Text="Connected" />

                </Grid>
            </ui:CardExpander.Header>
            <StackPanel Orientation="Horizontal">
                <ui:TextBox
                    Margin="5,0,5,0" HorizontalAlignment="Right" ui:ClearButtonEnabled="False"
                    AllowDrop="False" IsReadOnly="True" Text="DESKTOP-PU50446\SQLEXPRESS" />
            </StackPanel>
        </ui:CardExpander>

    </Grid>

</UserControl>