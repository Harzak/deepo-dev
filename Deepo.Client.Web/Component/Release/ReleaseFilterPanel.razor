@inject IStringLocalizer<Languages> _localizer;

<MudCard Elevation="5">

    <MudCardHeader Class="mt-4 mx-20">
        <CardHeaderContent>
            <MudText Typo="Typo.h5"><strong>@_localizer["UpcomingReleases"]</strong></MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudIconButton Icon="@Icons.Material.Filled.Settings" />
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent Class="mx-10">
        <MudStack>
            <MudTabs @bind-ActivePanelIndex="@ActivetabIndex" Outlined="false">
                @foreach (ReleaseTabModel tab in _tabs)
                {
                    <MudTabPanel Text="@tab.Label" Icon="@tab.Icon" Disabled="@tab.Disabled" ToolTip="@tab.ToolTip">
                        <ChildContent>
                            <MudDivider />
                            @switch (tab.Type)
                            {
                                case Navigation.EReleaseType.Vinyl:
                                    <Deepo.Client.Web.Component.Vinyl.ReleasesVinylFilter />
                                    break; 
                                default:
                                    break;
                            }
                        </ChildContent>
                    </MudTabPanel>
                }
            </MudTabs>
        </MudStack>
    </MudCardContent>
</MudCard>
