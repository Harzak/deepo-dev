<MudGrid Justify="Justify.Center">

    @for (int i = 0; i < MaxPage; i++)
    {
        <Deepo.Client.Web.Component.Vinyl.LazyGrid Position="i" IsVisible="@(i == (_selectedPage - 1))" MaxItem="MAX_ITEM_PERPAGE" />
    }

    <MudItem Class="my-6">
        <MudPagination @bind-Selected="@SelectedPage" ShowFirstButton="true" ShowLastButton="true" Count="@MaxPage" Class="mt-4" />
    </MudItem>

</MudGrid>
