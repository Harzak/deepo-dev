@using Deepo.Client.Web.Extension

<MudItem Class="pl-16" xs="8" sm="6" md="4" lg="3" xxl="2">

    <MudLink OnClick="OpenDialogAsync">
        <MudImage Style="height:200px; overflow:hidden;" Width="200" Height="200" Elevation="8" ObjectPosition=" ObjectPosition.Center" ObjectFit="ObjectFit.Cover" Class="rounded-lg" Fluid="true"
                  Src="@(!String.IsNullOrEmpty(Item.CoverUrl) ? Item.CoverUrl: "/images/unavailable.svg")" />
    </MudLink>

    <MudText Inline="false" Align="Align.Left" Typo="Typo.body1">
        @String.Join(", ", Item.AuthorsNames.TrimNumberSuffixe()).Truncate(27, TRUNCATION_CHARS)
    </MudText>

    <MudText Inline="false" Align="Align.Justify" Typo="Typo.body2">
        @Item.Name.Truncate(30, TRUNCATION_CHARS)
    </MudText>

</MudItem>