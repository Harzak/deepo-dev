@using Deepo.Client.Web.Configuration
@using Deepo.Client.Web.Dto

@for (int i = (this.VinylCatalog.CurrentPageIndex -1) * Constants.RELEASES_PER_PAGE; i < this.VinylCatalog.CurrentPageIndex * Constants.RELEASES_PER_PAGE; i++)
{
    ReleaseVinylDto? item = this.VinylCatalog.Items.ElementAtOrDefault(i);
    @if (item != null)
    {
        <Deepo.Client.Web.Component.Vinyl.GridItem Item="@item" />
    }
}

<MudFlexBreak />

<MudItem Class="my-5">
    <MudPagination ShowPageButtons="false" Count="@this.VinylCatalog.LastPageIndex" Color="Color.Primary" @bind-Selected="@this.CurrentPageIndex" />
    <MudText Class="ml-8" Color="Color.Primary" Align="Align.Center">Page: @this.VinylCatalog.CurrentPageIndex</MudText>
</MudItem>