@if (this.IsVisible && _releasesResult == null)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
}
else if (_releasesResult != null && _releasesResult.IsFailed)
{
    <MudText>Oops, something went wrong</MudText>
}
else if (this.IsVisible && _releasesResult != null && _releasesResult.Content != null && _releasesResult.Content.Any())
{
    @for (int i = 0; i < _releasesResult.Content.Count; i++)
    {
        <ReleasesVinylGridItem Item="_releasesResult.Content[i]" />
    }
}
